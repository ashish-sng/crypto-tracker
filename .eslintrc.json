{
  "env": {
    "browser": true,
    "es2021": true,
    "serviceworker": true
  },
  "extends": [
    "react-app",
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended",
    "prettier",
    "eslint:all",
    "plugin:react/all"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks", "prettier", "import"],
  "settings": {
    "react": {
      "version": "18.2.0",
      "jsx-runtime": "automatic"
    }
  },
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          ["builtin", "external"],
          ["internal", "sibling", "parent"],
          "index"
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "react/react-in-jsx-scope": "off", // Not needed in React 17+
    "react/prop-types": "off", // Optional: Disable prop-types if using TypeScript,
    "prettier/prettier": "error",
    "no-console": "off", // Turns off no-console warnings
    "no-unused-vars": "off", // Turns off unused variables warnings
    "no-debugger": "off", // Turns off debugger warnings,
    "sort-imports": "off",
    "line-comment-position": "off",
    "no-inline-comments": "off",
    "react/function-component-definition": "off",
    "arrow-body-style": "off",
    "react/jsx-indent": "off",
    "react/jsx-filename-extension": "off",
    "import/order": "off",
    "func-style": "off",
    "max-lines-per-function": "off",
    "one-var": "off",
    "id-length": "off",
    "react/jsx-one-expression-per-line": "off",
    "react/jsx-no-literals": "off",
    "react/jsx-newline": "off",
    "react/jsx-max-depth": "off",
    "react/jsx-indent-props": "off",
    "react/jsx-sort-props": "off",
    "react/jsx-no-bind": "off",
    "react/jsx-max-props-per-line": "off",
    "no-ternary": "off",
    "no-magic-numbers": "off",
    "react/sort-prop-types": "off",
    "sort-keys": "off",
    "react/self-closing-comp": "off"
  }
}
